<form class="form-wrapper" id="formParty" method="post">
  <div class="form-Intro">
    <h1>Форма регистрации</h1>
  </div>
    <div class="hello"> {{{  helloUser   }}} </div>

    <fieldset class="form-name">
      <legend>Sign In</legend>
      <div class="error_alert"> {{{ errorName }}} </div>
      <div class="error_alert"> {{{ errorPassword }}} </div>

      <div class="form-input-wrapper">
        <input id="userName" name="userName"  {{{ userName }}}  placeholder="Ivan Petrov" >
        <label for="userName"> User Name</label>
      </div>

      <div class="form-input-wrapper">
        <input type="password" id="password" name="password"  placeholder="new password" >
        <label for="password"> New password </label>
     </div>
     <div class="form-input-wrapper">
       <input type="password" id="passwordRepeat" name="passwordRepeat"  placeholder="pereat password" >
       <label for="passwordRepeat"> Repeat password </label>
    </div>

    </fieldset>

  <button id="submitBtn" class="form-submit-btn" type="submit"  value="Submit "> Sign In </button>

</form>
