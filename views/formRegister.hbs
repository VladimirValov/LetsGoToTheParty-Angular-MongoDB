<form class="form-wrapper" id="formParty" method="post">
  <div class="form-Intro">
    <h1>Форма регистрации</h1>
  </div>
    <div class="hello"> {{{  helloUser   }}} </div>

    <fieldset class="form-name">
      <legend>Sign In</legend>

      <div class="error_alert">
        <p>{{{ email }}}</p>
        <p>{{{ firstName }}}</p>
        <p>{{{ lastName }}}</p>
        <p>{{{ password }}}</p>
      </div>

      <div class="form-input-wrapper">
        <input id="email" name="email"    placeholder="mail@yandex.ru" >
        <label for="email"> Email</label>
      </div>
      <div class="form-input-wrapper">
        <input id="firsName" name="firstName"  placeholder="Ivan" >
        <label for="firstName"> First Name</label>
      </div>
      <div class="form-input-wrapper">
        <input id="lastName" name="lastName"    placeholder="Petrov" >
        <label for="lastName"> Last Name</label>
      </div>

      <div class="form-input-wrapper">
        <input type="password" id="password" name="password"  >
        <label for="password"> New password </label>
     </div>
     <div class="form-input-wrapper">
       <input type="password" id="passwordRepeat" name="passwordRepeat"  >
       <label for="passwordRepeat"> Repeat password </label>
    </div>

    </fieldset>

  <button id="submitBtn" class="form-submit-btn" type="submit"  value="Submit "> Sign In </button>
  <a href="/login"> У меня есть Логин и Пароль </a>

</form>
